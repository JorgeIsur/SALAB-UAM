{{#each recoger}}
    <div class="col-md-3">
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{name}}
                </h4>
                <p><b>Matricula</b></p>
                <p>{{matricula}}</p>
                <p><b>Estado</b></p>
                <form action="/recoger" method="POST">
                    <div class="form-group mt-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="recoger" name="recoger" value="true" checked>
                            <label class="form-check-label" for="recoger">Recoger</label>
                        </div>
                    </div>
                    <div class="mt-3">
                        <button class="btn btn-primary w-100" type="submit">
                            Confirmar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{{else}}
<div class="card mx-auto">
            <div class="card-body">
                <p class="lead mx-auto">No tienes prestamos por recoger.</p>
                <a href="/prestamos/nuevo-prestamo" class="btn btn-success btn-lg">Hacer un prestamo</a>
            </div>
        </div>
{{/each}}